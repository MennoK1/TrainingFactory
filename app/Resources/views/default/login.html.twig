{% extends 'base.html.twig' %}
{% block body %}

    {% if error %}
        <div>{{ error.messageKey|trans(error.messageData, 'security') }}</div>
    {% endif %}

    <form action="{{ path('login') }}" method="post">
        <table>
            <caption>Inloggen</caption>
            <tr>
                <td>Username: </td>
                <td>
                    <input type="text" autocomplete="off" name="_username">
                </td>
            </tr>

            <tr>
                <td>Password: </td>
                <td>
                    <input type="text" autocomplete="off" name="_password">
                </td>
            </tr>

            <tr>
                <td>
                    <input type="submit" value="inloggen">
                </td>
            </tr>
        </table>
    </form>
{% endblock %}